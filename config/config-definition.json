{
    "default": {
        "sources": [
            "default",
            "$config-env",
            "local",
            "$config-env-local"
        ],
        "configs": [
            {
                "name": "email",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "host",
                        "auth",
                        "sender"
                    ],
                    "properties": {
                        "host": {
                            "type": "string"
                        },
                        "auth": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "user",
                                "password"
                            ],
                            "properties": {
                                "user": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        },
                        "sender": {
                            "type": "string"
                        }
                    }
                }
            },
            {
                "name": "basic",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "baseURL",
                        "basePath",
                        "port",
                        "avatarUploadMaxInKb"
                    ],
                    "properties": {
                        "baseURL": {
                            "type": "string"
                        },
                        "basePath": {
                            "type": "string"
                        },
                        "port": {
                            "type": "integer"
                        },
                        "avatarUploadMaxInKb": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                }
            },
            {
                "name": "database",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "host",
                        "database",
                        "user",
                        "port"
                    ],
                    "properties": {
                        "host": {
                            "type": "string"
                        },
                        "database": {
                            "type": "string"
                        },
                        "user": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        },
                        "port": {
                            "type": "integer"
                        }
                    }
                }
            },
            {
                "name": "security",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": true,
                    "required": [
                        "passwordSaltRounds",
                        "sslSettings",
                        "auth"
                    ],
                    "properties": {
                        "passwordSaltRounds": {
                            "type": "integer"
                        },
                        "sslSettings": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "useSSL": {
                                            "type": "boolean",
                                            "enum": [
                                                false
                                            ]
                                        }
                                    },
                                    "required": [
                                        "useSSL"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "useSSL": {
                                            "type": "boolean",
                                            "enum": [
                                                true
                                            ]
                                        },
                                        "certFile": {
                                            "type": "string"
                                        },
                                        "keyFile": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "useSSL",
                                        "certFile",
                                        "keyFile"
                                    ]
                                }
                            ]
                        },
                        "auth": {
                            "type": "object",
                            "required": [
                                "google"
                            ],
                            "properties": {
                                "google": {
                                    "type": "object",
                                    "required": [
                                        "clientId",
                                        "clientSecret"
                                    ],
                                    "properties": {
                                        "clientId": {
                                            "type": "string"
                                        },
                                        "clientSecret": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "test": {
        "sources": [
            "default",
            "$config-env",
            "local",
            "$config-env-local"
        ],
        "extends": "default",
        "configs": [
            {
                "name": "test",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "test"
                    ],
                    "properties": {
                        "test": {
                            "type": "string"
                        }
                    }
                }
            }
        ]
    }
}