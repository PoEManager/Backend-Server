{
    "default": {
        "sources": [
            "default",
            "$config-env",
            "local"
        ],
        "configs": [
            {
                "name": "email",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "host",
                        "auth",
                        "sender"
                    ],
                    "properties": {
                        "host": {
                            "type": "string"
                        },
                        "auth": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "user",
                                "password"
                            ],
                            "properties": {
                                "user": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        },
                        "sender": {
                            "type": "string"
                        }
                    }
                }
            },
            {
                "name": "basic",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "baseURL"
                    ],
                    "properties": {
                        "baseURL": {
                            "type": "string"
                        }
                    }
                }
            },
            {
                "name": "security",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "jwt"
                    ],
                    "properties": {
                        "jwt": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "secret",
                                "expiration"
                            ],
                            "properties": {
                                "secret": {
                                    "type": "string"
                                },
                                "expiration": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "test": {
        "sources": [
            "default",
            "$config-env",
            "local"
        ],
        "extends": "default",
        "configs": [
            {
                "name": "test",
                "schema": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "test"
                    ],
                    "properties": {
                        "test": {
                            "type": "string"
                        }
                    }
                }
            }
        ]
    }
}