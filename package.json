{
    "name": "poe-manager-backend-server",
    "version": "0.0.0",
    "description": "The backend (i.e. REST) server of PoE Manager.",
    "main": "app.js",
    "scripts": {
        "test": "NODE_ENV='test' jest --coverage --runInBand",
        "doc": "typedoc --mode file --out 'docs/typedoc'",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node dist/app/app.js"
    },
    "keywords": [],
    "author": "Lukas Reichmann",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/PoEManager/Backend-Server"
    },
    "dependencies": {
        "@hapi/joi": "^15.1.1",
        "@types/bcrypt": "^3.0.0",
        "@types/config": "0.0.34",
        "@types/express": "^4.17.1",
        "@types/hapi__joi": "^15.0.3",
        "@types/lodash": "^4.14.137",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.7.2",
        "@types/nodemailer": "^6.2.1",
        "ajv": "^6.10.2",
        "base64url": "^3.0.1",
        "bcrypt": "^3.0.6",
        "config": "^3.2.2",
        "express": "^4.17.1",
        "handlebars": "^4.1.2",
        "juice": "^5.2.0",
        "lodash": "^4.17.15",
        "mariadb": "^2.1.0",
        "morgan": "^1.9.1",
        "nodemailer": "^6.3.0",
        "typescript": "^3.5.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "jest": "^24.9.0",
        "ts-jest": "^24.0.2",
        "tslint": "^5.19.0",
        "typedoc": "^0.15.0"
    },
    "jest": {
        "modulePathIgnorePatterns": [
            "/dist/"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "clearMocks": true,
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "json",
            "lcov",
            "clover"
        ]
    }
}
