{
    "name": "poe-manager-backend-server",
    "version": "0.0.0",
    "description": "The backend (i.e. REST) server of PoE Manager.",
    "main": "app.js",
    "scripts": {
        "test": "NODE_ENV='test' jest --coverage --runInBand",
        "doc": "typedoc --mode file --out 'docs/typedoc'",
        "build": "tsc",
        "prestart": "npm run build",
        "clean": "rimraf dist",
        "start": "node dist/app/app.js"
    },
    "keywords": [],
    "author": "Lukas Reichmann",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/PoEManager/Backend-Server"
    },
    "dependencies": {
        "@types/base64-url": "^2.2.0",
        "@types/bcrypt": "^3.0.0",
        "@types/config": "0.0.34",
        "@types/express": "^4.17.2",
        "@types/express-fileupload": "^1.1.0",
        "@types/lodash": "^4.14.144",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.12.5",
        "@types/nodemailer": "^6.2.2",
        "@types/passport": "^1.0.1",
        "@types/passport-google-oauth20": "^2.0.3",
        "@types/passport-http": "^0.3.8",
        "@types/passport-http-bearer": "^1.0.34",
        "ajv": "^6.10.2",
        "base64-url": "^2.3.2",
        "bcrypt": "^3.0.6",
        "config": "^3.2.4",
        "express": "^4.17.1",
        "express-fileupload": "^1.1.6-alpha.6",
        "handlebars": "^4.5.1",
        "jimp": "^0.8.5",
        "juice": "^5.2.0",
        "lodash": "^4.17.15",
        "mariadb": "^2.1.2",
        "morgan": "^1.9.1",
        "nodemailer": "^6.3.1",
        "passport": "^0.4.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-http": "^0.3.0",
        "passport-http-bearer": "^1.0.1",
        "typescript": "^3.6.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.21",
        "jest": "^24.9.0",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.0",
        "typedoc": "^0.15.0"
    },
    "jest": {
        "modulePathIgnorePatterns": [
            "/dist/"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "clearMocks": true,
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "json",
            "lcov",
            "clover"
        ]
    }
}